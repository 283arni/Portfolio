section.comments#review
  .container.container_full-screen
    .comments__wrapper
      .comments__header
        h2.comments__title.title Что обо мне говорят
        .comments__control
          button.comments__arrow(type="button")
            +icon("arrow-down", "comments__click comments__click-prev")
          button.comments__arrow(type="button")
            +icon("arrow-down", "comments__click comments__click-next")
      .comments__people
        ul.comments__list
          -
            var datas = [
              {
                "src": "content/koval.png",
                "name": "Ковальчук Дмитрий",
                "position": "Основатель Loftschool",
                "text": "Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!"
              },
              {
                "src": "content/saban.png",
                "name": "Владимир Сабанцев",
                "position": "Преподаватель",
                "text": "Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах"
              }              
            ]
          each item in datas
            li.comments__item
              .comments__icon
                +icon("quote", "comments__svg")
              .comments__info
                p= item.text 
                .comments__dude
                  .comments__pic
                    +image(item.src, "comments__img", "Фото оставляющего комментарий")
                  .comments__data
                    span= item.name
                    span= item.position